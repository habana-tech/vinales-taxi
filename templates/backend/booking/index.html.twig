{% extends 'backend/base.html.twig' %}

{% block title %}Booking index{% endblock %}
{% block breacrumbs %}
    <h4 class="page-title pull-left">Bookings</h4>
    <ul class="breadcrumbs pull-left">
        <li><a href="{{ path('frontend') }}">Home</a></li>
        <li><span>Bookings</span></li>
    </ul>
{% endblock %}
{% block body %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>BookingTime</th>
                <th>AirportPickup</th>
                <th>FlyNumber</th>
                <th>Campaign</th>
                <th>ClientName</th>
                <th>ClientEmail</th>
                <th>PickupPlace</th>
                <th>PickupTime</th>
                <th>BookingLang</th>
                <th>ReturnTravel</th>
                <th>ReturnPickupPlace</th>
                <th>ReturnPickupTime</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for booking in bookings %}
            <tr>
                <td>{{ booking.id }}</td>
                <td>{{ booking.bookingTime ? booking.bookingTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ booking.airportPickup ? 'Yes' : 'No' }}</td>
                <td>{{ booking.flyNumber }}</td>
                <td>{{ booking.campaign }}</td>
                <td>{{ booking.clientName }}</td>
                <td>{{ booking.clientEmail }}</td>
                <td>{{ booking.pickupPlace }}</td>
                <td>{{ booking.pickupTime ? booking.pickupTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ booking.bookingLang }}</td>
                <td>{{ booking.returnTravel ? 'Yes' : 'No' }}</td>
                <td>{{ booking.returnPickupPlace }}</td>
                <td>{{ booking.returnPickupTime ? booking.returnPickupTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('booking_show', {'id': booking.id}) }}">show</a>
                    <a href="{{ path('booking_edit', {'id': booking.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('backend_booking_new') }}">Create new</a>
{% endblock %}
