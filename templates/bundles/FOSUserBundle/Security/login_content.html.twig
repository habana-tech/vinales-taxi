{% trans_default_domain 'FOSUserBundle' %}


<div class="login-area login-bg" style="background-image: url({{ asset('img/more-destinations.jpg') | imagine_filter('min_width_1920') }})">
    <div class="container">
        <div class="login-box ptb--100">
            <form action="{{ path("fos_user_security_check") }}" method="post">
                <div class="login-form-head">
                    <h4>Sign In</h4>
                    <p>Hello there, Sign in to start managing!</p>

                </div>
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}
                <div class="login-form-body">
                    {% if error %}
                        <div class="form-gp text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <div class="form-gp">
                        <label for="username">Username or Email address</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
                        <i class="ti-email"></i>
                    </div>
                    <div class="form-gp">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="_password" required="required" autocomplete="current-password" />
                        <i class="ti-lock"></i>
                    </div>
                    <div class="row mb-4 rmber-area">
                        <div class="col-6">
                            <div class="custom-control custom-checkbox mr-sm-2">
                                <input type="checkbox" class="custom-control-input" id="remember_me" name="_remember_me" value="on">
                                <label class="custom-control-label" for="remember_me">Remember Me</label>
                            </div>
                        </div>
                        <div class="col-6 text-right">
                            <a href="{{ path('fos_user_resetting_request') }}">Forgot Password?</a>
                        </div>
                    </div>
                    <div class="submit-btn-area">
                        <button type="submit" id="_submit" name="_submit">Submit <i class="ti-arrow-right"></i></button>
                    </div>
                    <div class="form-footer text-center mt-5">
                        <p class="text-muted">Don't have an account? <a href="{{ path('fos_user_registration_register') }}">Sign up</a></p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- login area end -->

